
@{
    ViewBag.Title = "Register as Musician";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container" style="margin-top: 70px;">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <form>
                    <div class="form-row col">
                        <div class="col-form-label" style="width: 50%;">
                            <label for="text">Name</label>
                            <input type="text" class="form-control" id="text" placeholder="Your Name">
                        </div>
                        <div class="col-form-label" style="width: 50%;">
                            <label for="text">Surname</label>
                            <input type="text" class="form-control" id="text" placeholder="Your Surname">
                        </div>
                    </div>
                    <div class="form-row col">
                        <div class="col-form-label" style="width: 100%;">
                            <label for="inputEmail4">Email</label>
                            <input type="email" class="form-control" id="inputEmail4" placeholder="email@example.com">
                        </div>

                    </div>
                    <div class="form-row col">
                        <div class="col-form-label" style="width: 50%;">
                            <label for="inputPassword4">Password</label>
                            <input type="password" class="form-control" id="inputPassword4">
                        </div>
                        <div class="col-form-label" style="width: 50%;">
                            <label for="inputPassword4">Re-enter Password</label>
                            <input type="password" class="form-control" id="inputPassword4">
                        </div>
                    </div>
                    <div class="form-row col">
                        <label for="exampleFormControlTextarea1">Something about your music experience</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="Your favourite instrument, school you have done, etc."></textarea>
                    </div>
                    <div class="text-center" style="margin-top:20px;">
                        <button type="submit" class="btn btn-warning btn-register">Register</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <img src="@Url.Content("~/Content/img/musician.jpg")" style="margin: 0px; width: 100%;">
                <h4 align="center">“If you cannot teach me to fly, teach me to sing.” ― J.M. Barrie, Peter Pan</h4>
            </div>
        </div>
    </div>
